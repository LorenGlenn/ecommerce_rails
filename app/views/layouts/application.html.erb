<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceRails</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper teal lighten-3">
        <div class="right valign-wrapper" id="nav-login">
          <% if current_user %>
            <%= current_user.email %>
            <span class="separator">|</span>
            <%= image_tag(current_user.avatar.url(:thumb), :class => "nav-thumb") %>
            <span class="separator">|</span>
            <%= link_to "Sign out", '/signout' %>
            Cart: # of items: <%= current_order.order_items.length %>, Total: $<%= current_order.total %>
          <% else %>
            <%= link_to "Sign up", 'signup' %>
            <span class="separator">|</span>
            <%= link_to "Sign in", '/signin' %>
          <% end %>
        </div>
        <ul class="left hide-on-sm-and-down">
          <li class="active"><a href="/products">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
    </nav>
    <div class="row">
      <div class="col s8 offset-s2 teal lighten-3" id="title-container">
        <h1 class="center-align" id="title">Name TBD</h1>
      </div>

    </div>

    <%= flash[:alert] %>
    <%= flash[:notice] %>


    <%= yield %>
  </body>
</html>
